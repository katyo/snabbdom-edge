{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2015",
    "outDir": "./",
    "noImplicitAny": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "declaration": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "baseUrl": ".",
    "paths": {
      "snabbdom/*": [ 
        "node_modules/snabbdom/*",
        "node_modules/snabbdom/build/package/*"
      ]
    }
  },
  "files": [
    "src/snabbdom-edge.ts",
    "src/write-html.ts",
    "src/write-html/attributes.ts",
    "src/write-html/class.ts",
    "src/write-html/dataset.ts",
    "src/write-html/style.ts",
    "src/read-dom.ts",
    "src/read-dom/attributes.ts",
    "src/read-dom/class.ts",
    "src/read-dom/dataset.ts",
    "src/read-dom/style.ts",
    "src/util.ts"
  ]
}
